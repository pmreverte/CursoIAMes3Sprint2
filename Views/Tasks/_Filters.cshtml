@using Sprint2.Models
@model TaskFilter

<div class="card mb-3">
    <div class="card-body">
        <form method="get" asp-action="Index" id="filterForm">
            <div class="row g-3">
                <div class="col-md-4">
                    <div class="form-group">
                        <label for="SearchTerm">Buscar</label>
                        <input type="text" class="form-control" id="SearchTerm" name="SearchTerm" 
                               value="@Model.SearchTerm" placeholder="Buscar en descripción, categoría o notas...">
                    </div>
                </div>
                <div class="col-md-2">
                    <div class="form-group">
                        <label for="Status">Estado</label>
                        <select class="form-select" id="Status" name="Status" asp-items="@(Html.GetEnumSelectList<TaskStatus>())">
                            <option value="">Todos</option>
                        </select>
                    </div>
                </div>
                <div class="col-md-2">
                    <div class="form-group">
                        <label for="Priority">Prioridad</label>
                        <select class="form-select" id="Priority" name="Priority" asp-items="@(Html.GetEnumSelectList<Priority>())">
                            <option value="">Todas</option>
                        </select>
                    </div>
                </div>
                <div class="col-md-2">
                    <div class="form-group">
                        <label for="Category">Categoría</label>
                        <select class="form-select" id="Category" name="Category">
                            <option value="">Todas</option>
                            @foreach (var category in ViewBag.Categories)
                            {
                                <option value="@category" selected="@(Model.Category == category)">@category</option>
                            }
                        </select>
                    </div>
                </div>
                <div class="col-md-2">
                    <div class="form-group">
                        <label for="IsOverdue">Vencimiento</label>
                        <select class="form-select" id="IsOverdue" name="IsOverdue">
                            <option value="">Todos</option>
                            <option value="true" selected="@(Model.IsOverdue == true)">Vencidas</option>
                            <option value="false" selected="@(Model.IsOverdue == false)">No vencidas</option>
                        </select>
                    </div>
                </div>
            </div>
            <div class="row mt-3">
                <div class="col">
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-search"></i> Filtrar
                    </button>
                    <a href="@Url.Action("Index")" class="btn btn-secondary">
                        <i class="bi bi-x-circle"></i> Limpiar
                    </a>
                </div>
            </div>
        </form>
    </div>
</div>
